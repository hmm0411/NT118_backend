name: Import Secrets from PR (Simple)

on:
  pull_request:
    types: [opened, synchronize]

permissions:
  contents: read
  pull-requests: write
  secrets: write

jobs:
  import-secrets:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Check if .secrets.json exists
        id: check_file
        run: |
          if [ -f ".secrets.json" ]; then
            echo "exists=true" >> $GITHUB_OUTPUT
          else
            echo "exists=false" >> $GITHUB_OUTPUT
          fi

      - name: Stop if no secrets file
        if: steps.check_file.outputs.exists == 'false'
        run: echo "No .secrets.json found. Skipping."

      - name: Load and create secrets
        if: steps.check_file.outputs.exists == 'true'
        uses: actions/github-script@v6
        with:
          script: |
            const fs = require('fs')
            const secrets = JSON.parse(fs.readFileSync('.secrets.json', 'utf8'))

            for (const key in secrets) {
              console.log(`Creating secret: ${key}`)
              await github.rest.actions.createOrUpdateRepoSecret({
                owner: context.repo.owner,
                repo: context.repo.repo,
                secret_name: key,
                encrypted_value: secrets[key]
              })
            }

      - name: Comment on PR
        if: steps.check_file.outputs.exists == 'true'
        uses: actions/github-script@v6
        with:
          script: |
            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: "Secrets đã được thêm vào repo."
            })
